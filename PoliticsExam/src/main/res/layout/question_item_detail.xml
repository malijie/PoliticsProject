<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_question_detail_text_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二章 新民主主义革命理论"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_size_20"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:id="@+id/id_question_detail_layout_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/id_question_detail_text_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_18"/>
        <TextView
            android:id="@+id/id_question_detail_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_question_detail_text_index"
            android:text="1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_18"/>
        <LinearLayout
            android:id="@+id/id_question_detail_layout_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/id_question_detail_text_title">
            <CheckBox
                android:id="@+id/id_question_detail_checkbox_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A."
                android:textSize="@dimen/font_size_18"
                android:gravity="center_vertical"
                android:textColor="@color/font_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_18"
                android:text="1925年毛泽东1925年毛泽东1925年毛泽"
                android:textColor="@color/font_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_question_detail_layout_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/id_question_detail_layout_A">
            <CheckBox
                android:id="@+id/id_question_detail_checkbox_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B."
                android:textSize="@dimen/font_size_18"
                android:gravity="center_vertical"
                android:textColor="@color/font_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_18"
                android:text="1925年毛泽东1925年毛泽东1925年毛泽"
                android:textColor="@color/font_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_question_detail_layout_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/id_question_detail_layout_B">
            <CheckBox
                android:id="@+id/id_question_detail_checkbox_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C."
                android:textSize="@dimen/font_size_18"
                android:gravity="center_vertical"
                android:textColor="@color/font_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_18"
                android:text="1925年毛泽东1925年毛泽东1925年毛泽"
                android:textColor="@color/font_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_question_detail_layout_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/id_question_detail_layout_C">
            <CheckBox
                android:id="@+id/id_question_detail_checkbox_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D."
                android:textSize="@dimen/font_size_18"
                android:gravity="center_vertical"
                android:textColor="@color/font_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_18"
                android:text="1925年毛泽东1925年毛泽东1925年毛泽"
                android:textColor="@color/font_black"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交答案"
        android:layout_below="@id/id_question_detail_layout_question"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
