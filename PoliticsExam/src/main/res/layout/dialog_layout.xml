<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawable="@drawable/dialog_style">
        <TextView
            android:id="@+id/id_dialog_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_20"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="确定要退出吗?"
            android:textColor="@color/app_red"/>
        <View
            android:id="@+id/id_dialog_view_hint"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_red"
            android:layout_below="@id/id_dialog_text_title"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/id_dialog_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_18"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="确定要退出吗?"
            android:layout_below="@id/id_dialog_view_hint"
            android:textColor="@color/app_red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_dialog_text_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/id_dialog_button_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="确定"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/background_white"
                android:background="@color/app_red"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/id_dialog_button_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/font_black"
                android:background="@color/dialog_grey"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>