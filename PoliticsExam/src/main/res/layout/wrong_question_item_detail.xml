    <RelativeLayout
        android:id="@+id/id_question_detail_layout_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/id_question_detail_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            tools:text="1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东1925年毛泽东"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_18"
            android:layout_alignParentLeft="true"
            />
        <LinearLayout
            android:id="@+id/id_question_detail_layout_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@id/id_question_detail_text_title">
            <ImageView
                android:id="@+id/id_question_detail_image_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choice_a"/>
            <TextView
                android:id="@+id/id_question_detail_text_choiceA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_17"
                android:lineSpacingExtra="5dp"
                android:layout_marginLeft="3dp"
                tools:text="1925年毛泽东1925年毛泽东1925年毛泽"
                android:textColor="@color/font_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_question_detail_layout_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@id/id_question_detail_layout_A">
            <ImageView
                android:id="@+id/id_question_detail_image_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choice_b"/>

            <TextView
                android:id="@+id/id_question_detail_text_choiceB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:lineSpacingExtra="5dp"
                tools:text="1925年毛泽东1925年毛泽东1925年毛泽"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_17" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_question_detail_layout_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@id/id_question_detail_layout_B">
            <ImageView
                android:id="@+id/id_question_detail_image_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choice_c"/>
            <TextView
                android:id="@+id/id_question_detail_text_choiceC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_17"
                android:layout_marginLeft="3dp"
                android:lineSpacingExtra="5dp"
                tools:text="1925年毛泽东1925年毛泽东1925年毛泽"
                android:textColor="@color/font_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_question_detail_layout_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@id/id_question_detail_layout_C">
            <ImageView
                android:id="@+id/id_question_detail_image_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choice_d"/>
            <TextView
                android:id="@+id/id_question_detail_text_choiceD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_17"
                android:lineSpacingExtra="5dp"
                android:layout_marginLeft="3dp"
                tools:text="1925年毛泽东1925年毛泽东1925年毛泽"
                android:textColor="@color/font_black"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/id_question_detail_button_next"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/id_question_detail_layout_question"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button_selector"
        android:text="下一题"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_size_14" />

</LinearLayout>
