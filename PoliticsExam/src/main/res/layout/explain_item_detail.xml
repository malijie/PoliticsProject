<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_explain_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/question_explain_background">
        <TextView
            android:id="@+id/id_explain_detail_text_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_margin="10dp"
            android:textColor="@color/font_black"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size_18"/>
        <TextView
            android:id="@+id/id_explain_detail_text_outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【大纲还原】testtesttesttesttesttest"
            android:textColor="@color/font_black"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textSize="@dimen/font_size_18"/>
        <TextView
            android:id="@+id/id_explain_detail_text_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="【大纲还原】testtesttesttesttesttest"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_18" />

</LinearLayout>
